    <style>
        :root {
            --botpulse-red: #b71349;
            --botpulse-red-dark: #8b2946;
            --dark-bg: #1a1a1a;
            --dark-section: #212121;
            --text-color: #ffffff;
            --highlight-yellow: #f1c40f;
