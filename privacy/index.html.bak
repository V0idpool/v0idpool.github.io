        .hero-section {
            background-image: url('https://raw.githubusercontent.com/V0idpool/v0idpool.github.io/refs/heads/main/img/RfSplash.png'); /* RustForge Image */
            background-size: cover;
            background-position: center;
            color: var(--text-color);
            min-height: 55vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
        }

        .hero-content {
            background-color: rgba(0, 0, 0, 0.65);
            padding: 30px;
            border-radius: 15px;
            max-width: 1000px;
            margin: 0 auto;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            color: var(--botpulse-red); 
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
