    <style>
        :root {
            --botpulse-red: #b71349;
            --botpulse-red-dark: #8b2946;
            --dark-bg: #1a1a1a;
            --dark-section: #212121;
            --text-color: #ffffff;
            --highlight-yellow: #f1c40f;
        }

        body {
            font-family: 'Ubuntu', sans-serif;
            background-color: var(--dark-bg);
            color: var(--text-color);
        }

        .navbar-brand {
            font-weight: 700;
            color: var(--text-color) !important;
            display: flex;
            align-items: center;
        }
        .navbar-brand img {
            margin-right: 10px;
        }
        .navbar-nav {
        align-items: center;
        }
        
        .nav-link {
            color: #e0e0e0 !important;
            transition: color 0.2s ease;
        }
        .nav-link:hover {
        color: #969696 !important;
        }
        .bg-dark {
            background-color: var(--dark-section) !important;
            display: flex;
            align-items: center;
        }

        .hero-section {
            background-image: url('https://raw.githubusercontent.com/V0idpool/v0idpool.github.io/refs/heads/main/img/RfSplash.png'); /* RustForge Image */
            background-size: cover;
            background-position: center;
            color: var(--text-color);
            min-height: 55vh;
            display: flex;
            justify-content: center;
            align-items: center;
            text-align: center;
            padding: 20px;
        }

        .hero-content {
            background-color: rgba(0, 0, 0, 0.65);
            padding: 30px;
            border-radius: 15px;
            max-width: 1000px;
            margin: 0 auto;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 700;
            color: var(--botpulse-red); 
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
        }

        .hero-subtitle {
            font-size: 1.5rem;
            font-weight: 400;
            color: var(--text-color);
            margin-bottom: 1.5rem;
        }
        .hero-feature-list {
            list-style-type: none;
            padding-left: 0;
            margin-bottom: 1.5rem;
        }

       
        @media (max-width: 767px) {
        .hero-feature-list li {
        text-align: left;
        display: block;
        }
		}
        .btn-rustforge, .btn-primary1-pulse {
            display: inline-flex;
            align-items: center;
            justify-content: center;
            position: relative;
            padding: 10px 25px;
            background-color: #cc3017;
            color: var(--text-color);
            text-align: center;
            font-size: 1.1rem;
            font-weight: bold;
            text-transform: uppercase;
            text-decoration: none;
            border: none;
            border-radius: 8px;
            cursor: pointer;
            transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.2s ease;
            margin: 10px;
        }

        .btn-rustforge i, .btn-primary1-pulse i {
            margin-right: 8px;
        }

        .btn-rustforge:hover, .btn-primary1-pulse:hover {
            transform: scale(1.05);

            box-shadow: 0px 5px 25px rgb(255 0 0 / 55%);
            color: var(--text-color);
            text-decoration: none;
        }

        .btn-rustforge:active, .btn-primary1-pulse:active {
            transform: scale(0.95);
            box-shadow: none;
        }

        .cta-section {
            background-color: var(--dark-bg);
            padding: 50px 0;
            color: var(--text-color);
            text-align: center;
            border-top: 3px solid var(--botpulse-red-dark);
        }

        .cta-content {
            max-width: 100%;
            margin: 0 auto;
        }

        .section-title {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 2rem;
            color: var(--botpulse-red);
        }

		.feature-grid-container {
			max-width: 1200px; 
			margin: 30px auto;
		}
		.features-section {
            background-color: #202020;
            padding: 60px 0;
			border-top: 3px solid var(--botpulse-red-dark);
        }

        .features-section h2 {
            font-size: 2.5rem;
            font-weight: 700;
            margin-bottom: 3rem;
            color: #fff;
            text-align: center;
        }

        .feature-card {
            background-color: #141414;
            border-radius: 10px;
            padding: 40px;
            text-align: center;
            color: #fff;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .feature-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        }

        .feature-card h5 {
            font-size: 1.5rem;
            font-weight: 600;
            margin-top: 20px;
            color: #fff;
        }

        .feature-card p {
            color: #aaa;
        }

        .feature-icon {
            font-size: 2.5rem;
            color: #b71349;
            margin-bottom: 10px;
        }


        .footer {
            background-color: #2b2b2b;
            color: #e0e0e0;
            padding: 20px;
            text-align: center;
            border-top: 2px solid var(--botpulse-red);
        }
        
        .highlight-text-red {
            color: var(--botpulse-red);
            font-weight: 500;
        }
        .highlight-text-yellow {
            color: var(--highlight-yellow);
            font-weight: 500;
        }
        .code-snippet {
            background-color: #333;
            padding: 5px 10px;
            border-radius: 5px;
            font-family: 'Courier New', Courier, monospace;
            color: var(--highlight-yellow); 
        }

        @media (max-width: 768px) {
            .hero-title { font-size: 2.5rem; }
            .hero-subtitle { font-size: 1.2rem; }
            .btn-rustforge, .btn-primary1-pulse { font-size: 1rem; padding: 8px 15px; }
            .section-title { font-size: 2rem; }
            .feature-list li { font-size: 1rem; padding: 10px; }
        }

        @media (max-width: 576px) {
            .hero-title { font-size: 2rem; }
            .hero-subtitle { font-size: 1rem; }
            .btn-rustforge, .btn-primary1-pulse { font-size: 0.9rem; padding: 6px 12px; margin: 5px; }
            .section-title { font-size: 1.8rem; }
            .feature-list li { font-size: 0.9rem; }
        }
        
        .code-snippet {
            background-color: #333;
            padding: 5px 10px;
            border-radius: 5px;
            font-family: 'Courier New', Courier, monospace;
            color: var(--botpulse-red); 
